<div class="my-5 row justify-content-center">
    <h1 class="text-center mb-5">마이페이지</h1>
    <div class="col-md-8 card p-4">
        <div class="row">
            <div class="col-3">
                <img id="photo" src="http://via.placeholder.com/120x120" width="100%">
            </div>
            <div class="col-9">
                <div class="mb-2">
                    아이디: <%=user.uid%>
                    <a href="/users/change" class="btn btn-danger btn-sm ms-2" id="change">비밀번호변경</a>
                </div>
                <div class="mb-1">이름: <%= user.uname%>
                </div>
                <hr>
                <div class="mb-1">연락처: <%= user.phone%>
                </div>
                <div class="mb-1">주소: <%= user.address1%>
                        <%= user.address2%>
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-center mt-2">
        <a id="updateBtn" class="btn btn-secondary" href="/users/update?uid=<%=user.uid%>">정보수정</a>
    </div>
</div>

<script>
    const photo = "<%=user.photo%>";

    if(photo) {
        $("#photo").attr("src", "/upload/photo/" + photo);
    } else {
        $("#photo").attr("src", "http://via.placeholder.com/150x150");
    }
    // 파일이 바뀐 경우
    $(frm.file).on("change", function(e) {
        $("#photo").attr("src", URL.createObjectURL(e.target.files[0]));
    });
</script>

<script>
    const uid = "<%=user.uid%>";

    if(sessionStorage.getItem("uid")!=uid) {
        $("#updateBtn").hide();
        $("#change").hide();
    }
</script>